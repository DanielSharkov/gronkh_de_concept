@import "global_variables"

$AnimDuration = 200ms

.burger-menu
	> *
		$DisplayFlex()
		position: relative
		height: 2rem
		width: @height
		$TransitionDuration: $AnimDuration
		cursor: pointer
		opacity: .2
		transform: translate3d(0,0,0)
		.icon
			&:before, &:after
				transform: translate3d(0,0,0)
				$TransitionDuration($AnimDuration)
	&:hover
		> *
			opacity: 1
		.icon
			&:before, &:after
				$TransitionDuration($AnimDuration)
			&:before
				top: .5rem
			&:after
				top: -.5rem
	.icon
		position: relative
		height: .1rem
		width: 1.5rem
		margin: auto
		$TransitionDuration($AnimDuration)
		border-radius: (@height / 2)
		&:before, &:after
			content: ''
			display: block
			height: @height
			width: @width
			position: absolute
			z-index: 1
			$TransitionDuration($AnimDuration)
			border-radius: inherit
		&:before
			top: .3rem
		&:after
			top: -.3rem
	[open]
		opacity: 1

		// Minus -
		&:not(.steps)
			.icon
				&:before, &:after
					top: 0 !important
		.icon
			&:before, &:after
				$TransitionDuration($AnimDuration)

		// Arrows < > ^
		// Left(Default) Right Up
		&.arrow-left, &.arrow-right, &.arrow-up
			.icon
				&:before, &:after
					width: .9rem
				&:before
					transform: translate(-.4rem, 0) rotate(35deg)
					transform-origin: left top
				&:after
					transform: translate(-.4rem, 0) rotate(-35deg)
					transform-origin: left bottom
		// Up
		&.arrow-up
			transform: rotate(90deg)
		// Right
		&.arrow-right
			.icon
				&:before, &:after
					width: .9rem
				&:before
					transform: translate(.4rem, 0) rotate(-35deg)
					transform-origin: right top
				&:after
					transform: translate(.4rem, 0) rotate(35deg)
					transform-origin: right bottom

		// Plus and Close + x
		&.plus, &.close
			.icon
				background-color: transparent !important
				$TransitionDuration($AnimDuration)
				&:before
					transform: rotate(-45deg)
				&:after
					transform: rotate(45deg)
		&.plus
			transform: rotate(45deg)
